<Window x:Class="WpfProject.Controls.DepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject.Controls"
        mc:Ignorable="d"
        Title="Добавление/редактирование сотрудника" Height="350" Width="330">
    <Grid>
        <TextBox Height="23" Margin="25,20,25,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="25,63,25,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="25,106,25,0" TextWrapping="Wrap" Text="Отчество" VerticalAlignment="Top"/>
        <DatePicker Height="25" Margin="25,149,25,0" VerticalAlignment="Top" SelectedDateFormat="Short" IsTodayHighlighted="True" FirstDayOfWeek="Monday"/>
        <ComboBox Height="23" Margin="25,197,25,0" VerticalAlignment="Top"/>
        <Button Content="ОК" Height="23" HorizontalAlignment="Stretch"  Margin="25,0,172,25" VerticalAlignment="Bottom"/>
        <Button Content="Отмена" Height="23" HorizontalAlignment="Stretch" Margin="172,0,25,25" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
